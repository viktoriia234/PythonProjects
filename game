import random
import time


class Player():
    def __init__(self, name):
        self.health = 100
        self.name = name
        self.wins = 0

    def calculate_damage(self, damage_amount, attacker):
        if (damage_amount > self.health):
            overkill = abs(self.health - damage_amount)
            self.health = 0
            if (overkill > 0):
                print("{0} получает смертельный урон от {1} с {2} перебором!"
                      .format(self.name.capitalize(), attacker, overkill))
            else:
                print("{0} получает смертельный урон от {1}!"
                      .format(self.name.capitalize(), attacker))
        else:
            self.health -= damage_amount
            print("{0} получает {1} урона от {2}!"
                  .format(self.name.capitalize(), damage_amount, attacker))

    def calculate_heal(self, heal_amount):
        if (heal_amount + self.health > 100):
            self.health = 100
            print("{0} полностью восстанавливает здоровье!"
                  .format(self.name.capitalize()))
        else:
            self.health += heal_amount
            print("{0} исцеляет {1}!"
                  .format(self.name.capitalize(), heal_amount))


def parse_int(input):
    try:
        int(input)
        return True
    except ValueError:
        return False


def get_selection():
    valid_input = False
    while (valid_input is False):
        print()
        choice = input("Выберите атаку: ")
        if (parse_int(choice) is True):
            return int(choice)
        else:
            print("Ввод недействителен. Пожалуйста, попробуйте еще раз.")


def get_computer_selection(health):
    sleep_time = random.randrange(2, 5)
    print("....подождите....")
    time.sleep(sleep_time)

    if (health <= 35):
        result = random.randint(1, 6)
        if (result % 2 == 0):
            return 3
        else:
            return random.randint(1, 2)
    elif (health == 100):
        return random.randint(1, 2)
    else:
        return random.randint(1, 3)


def play_round(computer, human):
    game_in_progress = True
    current_player = computer

    while game_in_progress:
        if (current_player == computer):
            current_player = human
        else:
            current_player = computer

        print()
        print(
            "У вас осталось {0} здоровья, и "
            "у компьютера осталось {1} здовье."
            .format(human.health, computer.health))
        print()

        if (current_player == human):
            print("Доступные атаки:")
            print("1) Казнь электрическим током — наносит умеренный урон.")
            print("2) Wild Swing - высокий или низкий урон, "
                  "в зависимости от вашей удачи!")
            print("3) Поцелуй природы — восстанавливает умеренное количество здоровья..")
            move = get_selection()
        else:
            move = get_computer_selection(computer.health)

        if (move == 1):
            damage = random.randrange(18, 25)
            if (current_player == human):
                computer.calculate_damage(damage, human.name.capitalize())
            else:
                human.calculate_damage(damage, computer.name.capitalize())
        elif (move == 2):
            damage = random.randrange(10, 35)
            if (current_player == human):
                computer.calculate_damage(damage, human.name.capitalize())
            else:
                human.calculate_damage(damage, computer.name.capitalize())
        elif (move == 3):
            heal = random.randrange(18, 25)
            current_player.calculate_heal(heal)
        else:
            print ("Ввод недействителен. Пожалуйста, выберите вариант еще раз.")

        if (human.health == 0):
            print("Извините, вы проиграли!")
            computer.wins += 1
            game_in_progress = False

        if (computer.health == 0):
            print("Поздравляем, вы победили компьютер!")
            human.wins += 1
            game_in_progress = False


def start_game():
    print("Добро пожаловать боевую игру!")

    computer = Player("Компьютер")

    name = input("Введите свое имя: ")
    human = Player(name)

    keep_playing = True

    while (keep_playing is True):
        print("Текущий счет:")
        print("Вы - {0}".format(human.wins))
        print("Компьютер - {0}".format(computer.wins))

        computer.health = 100
        human.health = 100
        play_round(computer, human)
        print()
        response = input("Сыграть еще один раунд?(Y/N)")
        if (response.lower() == "n"):
            break

start_game()
